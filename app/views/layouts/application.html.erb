<!DOCTYPE html>
<html>
  <head>
    <title>PicProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		   <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/icon?family=Material+Icons' %> 
	<style>
	body {
	background-color:#484848;
	color:white;
	}
	img {
  max-width: 420px;
  max-height: 420px;
}

	#:hover, #:active, #:focus {
	color:red;
	}
	

	</style>
  </head>

  <body>
  
<div class="container">

<div style="padding-top:10px;">
  <nav class="navbar navbar-toggleable-md navbar-light bg-faded" style="border-bottom:1px solid #90A4AE;">
	
	<%= link_to "imgoose", root_path, class: "navbar-brand", style:"color:white;" %>
	
	<nav class="nav navbar-nav navbar-left" >
	<%= link_to "Upload", new_pic_path, class: "btn btn-info navbar-btn navbar-right", style:"color:white" %>
	<%= link_to "Browse", pics_path, class: "navbar-nav navbar-brand navbar-right", style:"color:white; font-size:0.9em;" %>
	<%= link_to "Library", pics_path, class: "navbar-nav navbar-brand navbar-right", style:"color:white; font-size:0.9em;" %>
	
	</nav>
	
	<% if user_signed_in? %>
	<%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-primary navbar-btn navbar-right", style: "margin-right:5px;" %>
	
	<% else %>
<%= link_to "Sign in", new_user_session_path, class: "btn btn-primary navbar-btn navbar-right", style: "margin-right:5px;" %>

<% end %>


<ul class="nav navbar-nav navbar-right ">
<li class="dropdown ">
          <a href="#" class="dropdown-toggle  " data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i style="color:#4285F4;"class="glyphicon glyphicon-user"></i> <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Gallery", pics_path %></li>
            <li><a href="#">Something else here</a></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
		 </ul>
		
  </nav>

        <!-- <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>-->
	   
</div>
    <%= yield %>
</div>
</body>
</html>
